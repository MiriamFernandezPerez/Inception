# =========================================
# Inception Project - MariaDB Configuration
# =========================================

# Main Daemon of MariaDB
[mysqld]

# Execute server with system user (not root) to avoid admin privileges
user = mysql

# MariaDB listens for connections on all network interfaces.
bind-address = 0.0.0.0

# Defines where database data is stored. This directory is mounted as a persistent volume from the host
datadir = /var/lib/mysql

# Default MariaDB Port
port = 3306

# UNIX socket file used by local processes to communicate with mysqld
socket = /run/mysqld/mysqld.sock
